%section#top-header.row
  %h1.col-md-2
    .navbar-brand= link_to "KenFlix", root_path
  - if logged_in?
    %ul.col-md-4.clearfix
      %li= link_to "Videos", home_path
      %li= link_to "My Queue"
      %li= link_to "People"
    = form_tag search_videos_path, method: :get, class: "form-inline col-md-4"  do
      .form-group
        %input.form-control(name="search_term" type="search" placeholder="Search for videos here")
          %button.btn.btn-default(type="submit") Search
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            "Welcome, #{current_user.full_name}"
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to "Sign Out", logout_path